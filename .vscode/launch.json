{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run-RemoteCode List Internal",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Run-RemoteCode.ps1",
            "args": [
                "-Verbose",
                "-SourceType List",
                "-ListPath \"${workspaceFolder}/ComputerNames.txt\""
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run-RemoteCode List External",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Run-RemoteCode.ps1",
            "args": [
                "-Verbose",
                "-SourceType List",
                "-ListPath \"${workspaceFolder}/ComputerNames.txt\"",
                "-ScriptBlock {Write-Output \"Hello World\"}"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run-RemoteCode Directory Internal",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Run-RemoteCode.ps1",
            "args": [
                "-Verbose",
                "-SourceType Directory",
                "-ListPath \"${workspaceFolder}/ComputerNames.txt\""
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run-RemoteCode Directory External",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Run-RemoteCode.ps1",
            "args": [
                "-Verbose",
                "-SourceType Directory",
                "-ListPath \"${workspaceFolder}/ComputerNames.txt\"",
                "-ScriptBlock {Write-Output \"Hello World\"}"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}