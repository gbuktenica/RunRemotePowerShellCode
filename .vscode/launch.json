{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run List File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Run-RemoteCode.ps1",
            "args": [
                "-Verbose",
                "-SourceType List",
                "-ListPath \"${workspaceFolder}/ComputerNames.txt\"",
                "-ScriptBlockFilePath \"${workspaceFolder}/ScriptBlock.ps1\""
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run List File AsJob",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Run-RemoteCode.ps1",
            "args": [
                "-Verbose",
                "-SourceType List",
                "-ListPath \"${workspaceFolder}/ComputerNames.txt\"",
                "-ScriptBlockFilePath \"${workspaceFolder}/ScriptBlock.ps1\"",
                "-AsJob"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run List File PowerShell 7",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Run-RemoteCode.ps1",
            "args": [
                "-Verbose",
                "-SourceType List",
                "-ListPath \"${workspaceFolder}/ComputerNames.txt\"",
                "-ScriptBlockFilePath \"${workspaceFolder}/ScriptBlock.ps1\"",
                "-ConfigurationName PowerShell.7"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run List File Copy",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Run-RemoteCode.ps1",
            "args": [
                "-Verbose",
                "-SourceType List",
                "-ListPath \"${workspaceFolder}/ComputerNames.txt\"",
                "-ScriptBlockFilePath \"${workspaceFolder}/ScriptBlock.ps1\"",
                "-SourcePath \"\\\\FileServer/Share/SubFolder\"",
                "-DestinationPath \"C$/Windows/Temp\""
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run List Inline Parameter",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Run-RemoteCode.ps1",
            "args": [
                "-Verbose",
                "-SourceType List",
                "-ListPath \"${workspaceFolder}/ComputerNames.txt\"",
                "-ScriptBlock {Write-Output \"Hello $env:COMPUTERNAME `nThis example code that is being run on the remote computer was passed from an inline parameter\"}"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run Directory File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Run-RemoteCode.ps1",
            "args": [
                "-Verbose",
                "-SourceType Directory",
                "-Filter \"*\"",
                "-ScriptBlockFilePath \"${workspaceFolder}/ScriptBlock.ps1\""
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run Directory Inline Parameter",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/Run-RemoteCode.ps1",
            "args": [
                "-Verbose",
                "-SourceType Directory",
                "-Filter \"*\"",
                "-FilterScript {$_.name -like \"Computer*\"}",
                "-ScriptBlock {Write-Output \"Hello $env:COMPUTERNAME `nThis example code that is being run on the remote computer was passed from an inline parameter\"}"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}